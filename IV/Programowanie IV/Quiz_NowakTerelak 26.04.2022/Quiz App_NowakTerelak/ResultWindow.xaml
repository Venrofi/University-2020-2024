        <Label Content="Pytanie:" HorizontalAlignment="Left" Margin="160,106,0,0" VerticalAlignment="Top" FontSize="15"/>
        <TextBlock Name="questionInput" HorizontalAlignment="Left" Margin="259,96,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="50"/>

        <Label Content="Odpowiedzi:" HorizontalAlignment="Left" Margin="250,151,0,0" VerticalAlignment="Top" FontSize="15"/>

        <TextBlock Name="answerA_Input" HorizontalAlignment="Left" Margin="300,196,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="30" TextAlignment="Center"/>
