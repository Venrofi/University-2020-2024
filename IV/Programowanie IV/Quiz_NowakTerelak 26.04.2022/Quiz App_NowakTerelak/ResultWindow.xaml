        <Label Content="Poprawna odpowiedź:" HorizontalAlignment="Left" Margin="495,156,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="" Name="Answer0" IsEnabled="False" GroupName="trueAnswerSelection" HorizontalAlignment="Left" Margin="550,201,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="" Name="Answer1" IsEnabled="False" GroupName="trueAnswerSelection" HorizontalAlignment="Left" Margin="550,251,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="" Name="Answer2" IsEnabled="False" GroupName="trueAnswerSelection" HorizontalAlignment="Left" Margin="550,301,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="" Name="Answer3" IsEnabled="False" GroupName="trueAnswerSelection" HorizontalAlignment="Left" Margin="550,351,0,0" VerticalAlignment="Top"/>

        <ListBox Name="questionList" Margin="0,155,575,0" SelectionChanged="listbox_Changed_Index"/>
    </Grid>
</Window>
