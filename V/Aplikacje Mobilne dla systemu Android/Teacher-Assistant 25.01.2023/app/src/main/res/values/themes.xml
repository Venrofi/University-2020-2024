<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeacherAsistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/city_lights</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/city_lights</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColorPrimary">@color/city_lights</item>
    </style>
    <!-- EditText Theme -->
    <style name="EditTextTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorHint">@color/city_lights</item>
        <item name="colorControlActivated">@color/city_lights</item>
        <item name="backgroundTint">@color/city_lights</item>
    </style>

    <style name="TimePickerText">
        <item name="android:textColor">@color/city_lights</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>